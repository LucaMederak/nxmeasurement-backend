{
  "name": "nx-measurement-backend",
  "version": "1.0.0",
  "description": "Measurement app backend",
  "main": "app.ts",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "dev": "nodemon src/app.ts",
    "start": "node dist/src/app.js",
    "build": "tsc -p .",
    "test": "jest",
    "test:unit": "jest unit",
    "test:int": "jest int",
    "test:coverage": "jest --coverage",
    "lint": "eslint .  --ext .ts",
    "lint-fix": "eslint --fix .  --ext .ts"
  },
  "keywords": [
    "Typescript",
    "Node"
  ],
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.7",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/response-time": "^2.3.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/config": "0.0.40",
    "@types/lodash": "^4.14.176",
    "@types/pino": "^6.3.12",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongoose": "^6.0.12",
    "pino": "^7.2.0",
    "pino-pretty": "^7.2.0",
    "prom-client": "^14.0.1",
    "response-time": "^2.3.2",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "zod": "^3.11.6"
  },
  "_moduleAliases": {
    "@config/*": "dist/src/config/*",
    "@interfaces/*": "dist/src/api/v1/interfaces/*",
    "@schema/*": "dist/src/api/v1/schema/*",
    "@utils/*": "dist/src/api/v1/utils/*",
    "@models/*": "dist/src/api/v1/models/*",
    "@controllers/*": "dist/src/api/v1/controllers/*",
    "@routes/*": "dist/src/api/v1/routes/*",
    "@middleware/*": "dist/src/api/v1/middleware/*",
    "@services/*": "dist/src/api/v1/services/*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
